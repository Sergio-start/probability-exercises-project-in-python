import random


def lanzar_dados():
    dado1 = random.randint(1, 6)
    dado2 = random.randint(1, 6)
    return dado1 + dado2


num_experimentos = 1000
exitos = 0


for _ in range(num_experimentos):
    suma = lanzar_dados()
    
    
    if suma > 7 or suma % 2 == 0:
        exitos += 1


probabilidad = exitos / num_experimentos


print(f"La probabilidad estimada de que la suma sea mayor a 7 o un n√∫mero par es: {probabilidad:.4f}")
